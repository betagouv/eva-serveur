<div class="fr-container">
  <div class="fr-mb-3w">
    <%= link_to "← Retour à l'index des composants", "/admin/ui_kit", class: "fr-link" %>
  </div>

  <h1>Démo HeaderComponent</h1>

  <h2>Header déconnecté</h2>
  <div class="fr-mb-5w">
    <%= render HeaderComponent.new(
      titre: t("header.titre"),
      tagline: t("header.tagline"),
      logged_in: false,
      show_navigation: false
    ) %>
  </div>

  <h2>Header Evapro</h2>
  <div class="fr-mb-5w">
    <%= render HeaderComponent.new(
      logo: "logo-evapro.png",
      logo_alt: "EvaPro",
      current_compte: (respond_to?(:current_compte) ? current_compte : nil)
    ) %>
  </div>

  <h2>Header EvaPro (PDF uniquement)</h2>
  <div class="fr-mb-5w">
    <%= render Pdf::HeaderEvaproComponent.new(date: Date.new(2025, 12, 12), beneficiaire: "Jean Dupond") %>
  </div>
</div>
