active_admin_form_for [ :admin, resource ] do |f|
  f.inputs do
    f.input :nom
    f.input :siret,
            required: resource.new_record?,
            hint: t("admin.structures.structures_locales.form.siret_hint")
    para do
      text_node link_to t("admin.structures.structures_locales.form.siret_lien"),
                        "https://annuaire-entreprises.data.gouv.fr/",
                        target: "_blank",
                        rel: "noopener noreferrer"
    end
    if can?(:manage, Compte)
      f.input :parent_id, as: :select, collection: StructureAdministrative.all
    end
  end
  f.actions do
    f.action :submit
    annulation_formulaire(f)
  end
end
