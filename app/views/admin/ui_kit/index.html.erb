<div class="container">
  <h1>UI Kit - Composants</h1>

  <p class="fr-text--lead">
    Cette page référence tous les composants visuels disponibles dans l'application.
    Cliquez sur un composant pour voir sa démonstration.
  </p>

  <div class="fr-grid-row fr-grid-row--gutters">
    <% components = [
      { name: "Badge", path: "badge", description: "Composant d'affichage de badge" },
      { name: "Barre Segmentée", path: "barre_segmentee", description: "Barre de progression segmentée" },
      { name: "Bilan Eva Pro", path: "bilan_eva_pro", description: "Composant bilan Eva Pro avec paliers" },
      { name: "Bouton", path: "bouton", description: "Composant bouton personnalisable" },
      { name: "Bouton Copier", path: "bouton_copier", description: "Bouton pour copier du contenu" },
      { name: "Boutons DSFR", path: "boutons_dsfr", description: "Boutons du Design System de l'État (fr-btn)" },
      { name: "Card (DSFR)", path: "card", description: "Composant card basé sur le DSFR" },
      { name: "Carte", path: "carte", description: "Composant carte générique" },
      { name: "Carte Partage Code", path: "carte_partage_code", description: "Carte pour partager des codes" },
      { name: "Carte V2", path: "carte_v2", description: "Composant carte v2 générique" },
      { name: "Chiffre Clé", path: "chiffre_cle", description: "Composant chiffre clé avec paliers" },
      { name: "Code", path: "code", description: "Affichage de code" },
      { name: "Ellipse", path: "ellipse", description: "Composant ellipse" },
      { name: "EvaProScore", path: "eva_pro_score", description: "Composant paliers Evaproscore A, B, C, D" },
      { name: "Notice évaluation incomplete", path: "evaluation_incomplete", description: "Composant notice incomplete" },
      { name: "Header", path: "header", description: "Composant header conforme au DSFR" },
      { name: "Impact Stepper", path: "impact_stepper", description: "Composant stepper pour afficher les niveaux d'impact" },
      { name: "Input", path: "input", description: "Composant champ de saisie (DSFR)" },
      { name: "Lien", path: "lien", description: "Composant lien personnalisé" },
      { name: "Menu des actions", path: "menu_actions", description: "Composant du menu des actions" },
      { name: "Mesure Chiffre Clé", path: "mesure_chiffre_cle", description: "Composant mesure avec chiffre clé et explications" },
      { name: "Mise en Avant", path: "mise_en_avant", description: "Composant de mise en avant" },
      { name: "Nom anonymisable", path: "nom_anonymisable", description: "nom anonymisable" },
      { name: "Panel", path: "panel", description: "Composant panel avec titre" },
      { name: "Pastille", path: "pastille", description: "Composant pastille" },
      { name: "Recherche Structure", path: "recherche_structure", description: "Composant de recherche de structure" },
      { name: "Référentiel ANLCI", path: "referentiel_anlci", description: "Composant référentiel ANLCI" },
      { name: "Rejoindre Structure", path: "rejoindre_structure", description: "Composant pour rejoindre une structure" },
      { name: "Score Arrows", path: "score_arrows", description: "Flèches de score (A à D)" },
      { name: "Statut Campagne", path: "statut_campagne", description: "Composant statut de campagne" },
      { name: "Tableau", path: "tableau", description: "Composant tableau" },
      { name: "Tag", path: "tag", description: "Composant tag" },
      { name: "Texte Intro", path: "texte_intro", description: "Composant texte d'introduction avec titre et texte" },
      { name: "Toggle", path: "toggle", description: "Composant toggle/switch" }
    ] %>

    <% components.each do |component| %>
      <div class="fr-col-12 fr-col-md-6 fr-col-lg-4">
        <div class="fr-card fr-card--horizontal">
          <div class="fr-card__body">
            <div class="fr-card__content">
              <h3 class="fr-card__title">
                <%= link_to component[:name], "/admin/ui_kit/#{component[:path]}", class: "fr-link" %>
              </h3>
              <p class="fr-card__desc">
                <%= component[:description] %>
              </p>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
