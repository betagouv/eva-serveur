<footer class="fr-footer" role="contentinfo">

  <div class="fr-footer__top">
    <div class="fr-container">
      <div class="fr-grid-row fr-grid-row--start fr-grid-row--gutters">
        <div class="fr-col-12 fr-col-sm-3 fr-col-md-3">
          <h3 class="fr-footer__top-cat">
            <%= t("footer.navigation.decouvrir_eva") %>
          </h3>
          <ul class="fr-footer__top-list">
            <li>
              <%= render LienComponent.new(t("footer.navigation.un_service_anlci"), "#{ENV['URL_SITE_VITRINE']}/nos-missions/", externe: false, class: "fr-footer__top-link") %>
            </li>
            <li>
              <%= render LienComponent.new(t("footer.navigation.illettrisme_france"), "#{ENV['URL_SITE_VITRINE']}/lillettrisme-en-france/", externe: false, class: "fr-footer__top-link") %>
            </li>
            <li>
              <%= render LienComponent.new(t("footer.navigation.parcours_competences"), "#{ENV['URL_SITE_VITRINE']}/competences/", externe: false, class: "fr-footer__top-link") %>
            </li>
          </ul>
        </div>
        <div class="fr-col-12 fr-col-sm-3 fr-col-md-3">
          <h3 class="fr-footer__top-cat">
            <%= t("footer.navigation.cas_usages") %>
          </h3>
          <ul class="fr-footer__top-list">
            <li>
              <%= render LienComponent.new(t("footer.navigation.reperer_difficultes"), "#{ENV['URL_SITE_VITRINE']}/reperer-les-difficultes/", externe: false, class: "fr-footer__top-link") %>
            </li>
            <li>
              <%= render LienComponent.new(t("footer.navigation.positionner_competences"), "#{ENV['URL_SITE_VITRINE']}/positionner-les-competences/", externe: false, class: "fr-footer__top-link") %>
            </li>
          </ul>
        </div>
        <div class="fr-col-12 fr-col-sm-3 fr-col-md-3">
          <h3 class="fr-footer__top-cat">
            <%= t("footer.navigation.ressources") %>
          </h3>
          <ul class="fr-footer__top-list">
            <li>
              <%= render LienComponent.new(t("footer.navigation.supports"), "#{ENV['URL_SITE_VITRINE']}/centre-daide/", externe: false, class: "fr-footer__top-link") %>
            </li>
            <li>
              <%= render LienComponent.new(t("footer.navigation.faq"), "#{ENV['URL_SITE_VITRINE']}/faq/", externe: false, class: "fr-footer__top-link") %>
            </li>
            <li>
              <%= render LienComponent.new(t("footer.navigation.formation_presentation"), "#{ENV['URL_SITE_VITRINE']}/formation-et-presentation/", externe: false, class: "fr-footer__top-link") %>
            </li>
          </ul>
        </div>
        <div class="fr-col-12 fr-col-sm-3 fr-col-md-3">
          <h3 class="fr-footer__top-cat">
            <%= t("footer.navigation.en_savoir_plus") %>
          </h3>
          <ul class="fr-footer__top-list">
            <li>
              <%= render LienComponent.new(t("footer.navigation.contact"), "#{ENV['URL_SITE_VITRINE']}/contact/", externe: false, class: "fr-footer__top-link") %>
            </li>
            <li>
              <%= render LienComponent.new(t("footer.navigation.equipe"), "https://beta.gouv.fr/startups/eva.html", externe: true, class: "fr-footer__top-link") %>
            </li>
            <li>
              <%= render LienComponent.new(t("footer.navigation.code_source"), "https://github.com/betagouv/eva-serveur", externe: true, class: "fr-footer__top-link") %>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
  <div class="fr-container">
    <div class="fr-footer__body">
      <div class="fr-footer__brand fr-enlarge-link">
        <p class="fr-logo">
        <%= t("footer.brand.republique") %>
        <br><%= t("footer.brand.francaise") %>
        </p>
        <a title="<%= t("footer.brand.retour_accueil_title") %>" href="/" class="fr-footer__brand-link">
          <%= image_tag "logo_anlci.svg", alt: t("logo_anlci"), class: "fr-footer__logo", style: "width:10rem;" %>
        </a>
      </div>
      <div class="fr-footer__content">
        <p class="fr-footer__content-desc"><%= t("footer.description") %></p>
        <ul class="fr-footer__content-list">
          <li class="fr-footer__content-item">
            <%= render LienComponent.new("info.gouv.fr", "https://info.gouv.fr", externe: true, class: "fr-footer__content-link") %>
          </li>
          <li class="fr-footer__content-item">
            <%= render LienComponent.new("service-public.gouv.fr", "https://service-public.gouv.fr", externe: true, class: "fr-footer__content-link") %>
          </li>
          <li class="fr-footer__content-item">
            <%= render LienComponent.new("legifrance.gouv.fr", "https://legifrance.gouv.fr", externe: true, class: "fr-footer__content-link") %>
          </li>
          <li class="fr-footer__content-item">
            <%= render LienComponent.new("data.gouv.fr", "https://data.gouv.fr", externe: true, class: "fr-footer__content-link") %>
          </li>
        </ul>
      </div>
    </div>
    <% if @avec_partenaires %>
      <div class="fr-footer__partners">
        <h2 class="fr-footer__partners-title"><%= t("footer.partners.titre") %></h2>
        <div class="fr-footer__partners-logos">
          <div class="fr-footer__partners-main">
            <% partenaires_par_defaut.each do |partenaire| %>
              <a class="fr-footer__partners-link" href="<%= partenaire[:url] %>" target="_blank" rel="noopener external">
                <%= image_tag partenaire[:logo], alt: partenaire[:nom], class: "fr-footer__logo", style: "height: 5.625rem;" %>
              </a>
            <% end %>
          </div>
          <% if @partenaires.present? %>
            <div class="fr-footer__partners-sub">
              <ul>
                <% @partenaires.each do |partenaire| %>
                  <li>
                    <a class="fr-footer__partners-link" href="<%= partenaire[:url] || "" %>" <%= partenaire[:url] ? 'target="_blank" rel="noopener external"'.html_safe : "" %>>
                      <%= image_tag partenaire[:logo], alt: partenaire[:nom], class: "fr-footer__logo", style: "height: 5.625rem;" %>
                    </a>
                  </li>
                <% end %>
              </ul>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
    <div class="fr-footer__bottom">
      <ul class="fr-footer__bottom-list" style="margin-bottom: 0;">
        <li class="fr-footer__bottom-item">
          <%= render LienComponent.new(t("footer.bottom.accessibilite"), "#{ENV['URL_SITE_VITRINE']}/declaration-daccessibilite/", externe: false, class: "fr-footer__bottom-link") %>
        </li>
        <li class="fr-footer__bottom-item">
          <%= render LienComponent.new(t("footer.bottom.mentions_legales"), "#{ENV['URL_SITE_VITRINE']}/condition-generales-dutilisation/", externe: false, class: "fr-footer__bottom-link") %>
        </li>
        <li class="fr-footer__bottom-item">
          <%= render LienComponent.new(t("footer.bottom.donnees_personnelles"), "#{ENV['URL_SITE_VITRINE']}/condition-generales-dutilisation/", externe: false, class: "fr-footer__bottom-link") %>
        </li>
        <li class="fr-footer__bottom-item">
          <%= render LienComponent.new(t("footer.bottom.gestion_cookies"), "#tarteaucitron", externe: false, class: "fr-footer__bottom-link", role: "button") %>
        </li>
      </ul>
      <div class="fr-footer__bottom-copy">
        <p><%= t("footer.bottom.licence_text") %>
          <%= render LienComponent.new(t("footer.bottom.licence_etalab"), "https://github.com/etalab/licence-ouverte/blob/master/LO.md", externe: true) %>
        </p>
      </div>
    </div>
  </div>
</footer>
