<% if cafe_de_la_place
    profil = cafe_de_la_place.niveau_anlci_litteratie
%>
<div id="lettrisme" class="page">
  <h2>Communiquer en fran√ßais - Lettrisme </h2>
  <div class="panel">
    <div class="lettrisme-synthese lettrisme-synthese--<%= profil %>">
      <div class="lettrisme-synthese__contenu">
        <div>
          <% unless profil.to_s.in?(['indetermine', 'profil_aberrant']) %>
            <h2 class="icone__header">Profil</h2>
          <% end %>
          <%= image_tag "icone_profil/icone_#{profil}.svg" %>
        </div>
        <div>
          <%= md t(".litteratie.#{profil}.titre") %>
          <%= md t(".litteratie.#{profil}.description") %>
        </div>
      </div>
    </div>
    <% if niveau_bas?(profil) %>
      <div class="lettrisme-sous-competences">
        <% cafe_de_la_place.competences_lettrisme.each do |competence, profil| %>
          <%= render 'lettrisme_sous_competence', sous_competence: competence, profil: profil %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
<% end %>
