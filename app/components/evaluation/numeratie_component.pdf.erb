<% @sous_competences = @sous_competences&.to_a %>

<div class="page page-numeratie">
  <%= render 'entete_page', restitution_globale: @restitution_globale %>

  <div class="content">
    <h2 class="text-center"><%= t('titre', scope: 'admin.restitutions.numeratie') %></h2>

    <%= render(
      'litteratie_numeratie_synthese',
      synthese: @synthese,
      scope: "admin.evaluations.numeratie.#{@profil}",
      icone: "icone_profil/icone_#{@profil}.svg"
    ) %>

    <% if @sous_competences %>
      <% sous_competence = @sous_competences[0] %>
      <%= render(SousCompetenceComponent.new(:numeratie, sous_competence[0], sous_competence[1])) %>

      <% sous_competence = @sous_competences[1] %>
      <%= render(SousCompetenceComponent.new(:numeratie, sous_competence[0], sous_competence[1])) %>
    <% end %>
  </div>
</div>

<% if @sous_competences %>
