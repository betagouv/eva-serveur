<div class="container">
  <div class="fr-mb-3w">
    <%= link_to "← Retour à l'index des composants", "/admin/ui_kit", class: "fr-link" %>
  </div>

  <h1 class="fr-h1 fr-mt-6w">Démo BoutonComponent</h1>

  <h2 class="fr-h2 fr-mt-6w">Bouton primaire MD - États</h2>
  <div style="display: flex; gap: 16px; align-items: flex-start; flex-wrap: wrap;">
    <div style="display: flex; flex-direction: column; gap: 8px;">
      <span style="font-size: 12px; color: #666;">Défaut</span>
      <%= render BoutonComponent.new("#", type: :primary, size: :md) do %>
        Libellé
      <% end %>
    </div>
    <div style="display: flex; flex-direction: column; gap: 8px;">
      <span style="font-size: 12px; color: #666;">Hover</span>
      <%= render BoutonComponent.new("#", type: :primary, size: :md, class: "bouton-hover-demo") do %>
        Libellé
      <% end %>
    </div>
    <div style="display: flex; flex-direction: column; gap: 8px;">
      <span style="font-size: 12px; color: #666;">Cliqué</span>
      <%= render BoutonComponent.new("#", type: :primary, size: :md, class: "bouton--actif") do %>
        Libellé
      <% end %>
    </div>
    <div style="display: flex; flex-direction: column; gap: 8px;">
      <span style="font-size: 12px; color: #666;">Désactivé</span>
      <%= render BoutonComponent.new("#", type: :desactive, size: :md) do %>
        Libellé
      <% end %>
    </div>
  </div>

  <h2 class="fr-h2 fr-mt-6w">Bouton secondaire MD - États</h2>
  <div style="display: flex; gap: 16px; align-items: flex-start; flex-wrap: wrap;">
    <div style="display: flex; flex-direction: column; gap: 8px;">
      <span style="font-size: 12px; color: #666;">Défaut</span>
      <%= render BoutonComponent.new("#", type: :secondary, size: :md) do %>
        Libellé
      <% end %>
    </div>
    <div style="display: flex; flex-direction: column; gap: 8px;">
      <span style="font-size: 12px; color: #666;">Hover</span>
      <%= render BoutonComponent.new("#", type: :secondary, size: :md, class: "bouton-secondaire-hover-demo") do %>
        Libellé
      <% end %>
    </div>
    <div style="display: flex; flex-direction: column; gap: 8px;">
      <span style="font-size: 12px; color: #666;">Cliqué</span>
      <%= render BoutonComponent.new("#", type: :secondary, size: :md, class: "bouton--actif") do %>
        Libellé
      <% end %>
    </div>
    <div style="display: flex; flex-direction: column; gap: 8px;">
      <span style="font-size: 12px; color: #666;">Désactivé</span>
      <%= render BoutonComponent.new("#", type: :secondary, size: :md, class: "bouton--desactive") do %>
        Libellé
      <% end %>
    </div>
  </div>

  <h2 class="fr-h2 fr-mt-6w">Bouton tertiaire MD - États</h2>
  <div style="display: flex; gap: 16px; align-items: flex-start; flex-wrap: wrap;">
    <div style="display: flex; flex-direction: column; gap: 8px;">
      <span style="font-size: 12px; color: #666;">Défaut</span>
      <%= render BoutonComponent.new("#", type: :tertiary, size: :md) do %>
        Libellé
      <% end %>
    </div>
    <div style="display: flex; flex-direction: column; gap: 8px;">
      <span style="font-size: 12px; color: #666;">Hover</span>
      <%= render BoutonComponent.new("#", type: :tertiary, size: :md, class: "bouton-tertiaire-hover-demo") do %>
        Libellé
      <% end %>
    </div>
    <div style="display: flex; flex-direction: column; gap: 8px;">
      <span style="font-size: 12px; color: #666;">Cliqué</span>
      <%= render BoutonComponent.new("#", type: :tertiary, size: :md, class: "bouton--actif") do %>
        Libellé
      <% end %>
    </div>
    <div style="display: flex; flex-direction: column; gap: 8px;">
      <span style="font-size: 12px; color: #666;">Désactivé</span>
      <%= render BoutonComponent.new("#", type: :tertiary, size: :md, class: "bouton--desactive") do %>
        Libellé
      <% end %>
    </div>
  </div>

  <h2 class="fr-mt-6w">Petit Bouton (sm)</h2>
  <%= render BoutonComponent.new("#", type: :primary, size: :sm) do %>
    Petit Bouton
  <% end %>

  <h2 class="fr-h2 fr-mt-6w">Très petit Bouton (xs)</h2>
  <%= render BoutonComponent.new("#", type: :primary, size: :xs) do %>
    Très petit Bouton
  <% end %>

  <h2 class="fr-h2 fr-mt-6w">Avec paramètres supplémentaires</h2>
  <%= render BoutonComponent.new(
        "#",
        type: :primary,
        id: "mon-bouton",
        data: { test: "value" }
      ) do %>
    Bouton avec ID
  <% end %>

  <h2 class="fr-h2 fr-mt-6w">Bouton primaire avec icone</h2>
  <%= render BoutonComponent.new("#", type: :primary) do %>
    <span class="fr-icon fr-icon--sm fr-icon-arrow-go-back-line" aria-label="Icône de bouton de retour arrière"></span>
    Bouton Primaire
  <% end %>
</div> 

