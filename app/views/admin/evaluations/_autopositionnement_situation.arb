# frozen_string_literal: true

h2 t('.titre'), class: 'categorie'

donnee_sociodemographique = resource.donnee_sociodemographique
questions = %w[age genre langue_maternelle derniere_situation]

questions.each do |question|
  div t(".#{question}")
  reponse = if donnee_sociodemographique&.read_attribute(question).present?
              t(".#{donnee_sociodemographique&.read_attribute(question)}")
            else
              t('admin.evaluations.autopositionnement.non_renseigne')
            end
  div reponse, class: 'reponse'
end
