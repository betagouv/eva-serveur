<%= render PanelComponent.new(titre: t(".titre-evaluation-diagnostic"), classes: "panel--beneficiaire") do %>
  <%= render TableauComponent.new(collection: evaluations_diagnostic) do |tableau| %>
    <% tableau.colonne(titre: t(".created_at")) do |evaluation|%>
      <% evaluation.created_at.strftime("%d/%m/%Y") %>
    <%end %>
    <% tableau.colonne(titre: Evaluation.human_attribute_name("campagne")) do |evaluation|%>
      <% evaluation.campagne.display_name %>
    <%end %>
    <% tableau.colonne(td_class: "col-actions tableau-boutons-action") do |evaluation| %>
        <%= render MenuActionsComponent.new(evaluation,
          Evaluation::ACTIONS[:LIRE],
          Evaluation::ACTIONS[:EDITER],
          Evaluation::ACTIONS[:SUPPRIMER]
        ) %>
    <% end %>
  <% end %>
<% end %>
