<div class="choix-item">
  <div class='choix-option-personnalisation'>
    <h4 class='choix-titre'>
      <%= t(".#{situation}.nom") %> ·
      <span class="choix-option-personnalisation-duree-moyenne">
        Durée moyenne : <%= t(".#{situation}.duree_moyenne") %>
      </span>
    </h4>

    <div class="choix-option-personnalisation-description">
      <%= t(".#{situation}.description") %>
    </div>
  </div>
  <div class="checkbox-option-personnalisation-container">
    <div class="checkbox-option-personnalisation">
      <%= image_tag 'check.svg' %>
    </div>
  </div>
</div>
