div class: "page-beneficiaire" do
  div class: "row" do
    div class: "offset-2 col-8" do
      h2 render NomAnonymisableComponent.new(beneficiaire)
      para class: "panel" do
        t(".info")
      end
    end
  end

  render CartePartageCodeComponent.new(
    libelle_code: Beneficiaire.human_attribute_name("code_beneficiaire"),
    code: beneficiaire.code_beneficiaire,
    url: url_beneficiaire(beneficiaire.code_beneficiaire),
    description: I18n.t("admin.beneficiaires.show.carte_partage_code.description")
  )

  if evaluations_positionnement.present?
    render partial: "admin/beneficiaires/liste_evaluations_positionnement",
           locals: {
             beneficiaire: beneficiaire,
             evaluations_positionnement: evaluations_positionnement
           }
  end

  if evaluations_diagnostic.present?
    render partial: "admin/beneficiaires/liste_evaluations_diagnostic",
           locals: {
             beneficiaire: beneficiaire,
             evaluations_diagnostic: evaluations_diagnostic
           }
  end
end
