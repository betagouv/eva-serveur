<!DOCTYPE html>
<html lang="<%=I18n.locale%>">
<head>
  <meta http-equiv="Content-type" content="text/html; charset=utf-8">

  <title><%= [@page_title, ActiveAdmin.application.site_title(self)].compact.join(" | ") %></title>

  <% ActiveAdmin.application.stylesheets.each do |style, options| %>
    <% if ActiveAdmin.application.use_webpacker %>
      <%= stylesheet_pack_tag style, **options %>
    <% else %>
      <%= stylesheet_link_tag style, **options %>
    <% end %>
  <% end %>
  <% ActiveAdmin.application.javascripts.each do |path| %>
    <% if ActiveAdmin.application.use_webpacker %>
      <%= javascript_pack_tag path %>
    <% else %>
      <%= javascript_include_tag path %>
    <% end %>
  <% end %>

  <%= favicon_link_tag ActiveAdmin.application.favicon if ActiveAdmin.application.favicon %>

  <% ActiveAdmin.application.meta_tags_for_logged_out_pages.each do |name, content| %>
    <%= tag(:meta, name: name, content: content) %>
  <% end %>

  <%= csrf_meta_tag %>
</head>
<body class="active_admin logged_out <%= controller.action_name %>">
<div id="wrapper">

  <div id="content_wrapper" class="<%= yield :classes_conteneur %>">
    <div class="groupe-titres">
      <h1><%= yield :titre %></h1>
    </div>
    <div class="flashes">
      <% flash_messages.each do |type, message| %>
        <%= content_tag :div, message, class: "flash flash_#{type}" %>
      <% end %>
    </div>

    <div class="active_admin_header">
       <%= md t('active_admin.devise.login.header_title') -%>
    </div>
    <div id="active_admin_content">
      <%= yield %>
    </div>

    <div class="active_admin_connexion">
      <%= md t('active_admin.devise.login.inscription') -%>
      <%= link_to t('active_admin.devise.links.sign_up'), structures_path %>
    </div>


    <div class="evaluations_header">
       <%= md t('active_admin.devise.login.evaluations.header_title') -%>
    </div>
    <div id="active_admin_content" class="evaluations_content">
      <%= md t('active_admin.devise.login.evaluations.content') -%>

      <!-- Ajouter le formulaire pour lancer l'Ã©valuation ici -->
    </div>

  </div>
  <div id="footer">
    <%= ActiveAdmin.application.footer %>
  </div>
</div>
</body>
</html>
