div id: 'francais_mathematiques', class: 'francais-mathematiques marges-page' do
  if !pdf && (restitution_globale.synthese == 'illettrisme_potentiel')
    render 'demande_aide_illettrisme'
  end

  render 'litteratie_numeratie_synthese',
         synthese: restitution_globale.synthese,
         pdf: pdf

  render 'litteratie_numeratie_niveau1',
         interpretations: restitution_globale.interpretations_niveau1_cefr,
         referentiel: 'cefr',
         pdf: pdf

  div class: 'row my-4' do
    div class: 'col-auto badge' do
      img # place holder
    end
    div class: 'col' do
      render 'metacompetences', categorie: :litteratie
    end
    div class: 'col-auto badge' do
      img # place holder
    end
    div class: 'col' do
      render 'metacompetences', categorie: :numeratie
    end
  end
end
