<div class="container">
  <div class="fr-mb-3w">
    <%= link_to "← Retour à l'index des composants", "/admin/ui_kit", class: "fr-link" %>
  </div>

  <h1>Démo LienComponent</h1>

  <h2>Lien interne</h2>
  <%= render LienComponent.new("Accueil", "/") %>

  <h2>Lien externe</h2>
  <%= render LienComponent.new(
        "Site officiel",
        "https://www.example.com",
        externe: true
      ) %>

  <h2>Lien avec aria-label</h2>
  <%= render LienComponent.new(
        "En savoir plus",
        "#",
        aria: { label: "En savoir plus sur cette fonctionnalité" }
      ) %>

  <h2>Lien externe avec aria-label</h2>
  <%= render LienComponent.new(
        "Documentation",
        "https://docs.example.com",
        externe: true,
        aria: { label: "Documentation externe" }
      ) %>
</div> 
