# frozen_string_literal: true

div id: 'evaluation__details', class: 'row' do
  scope = 'admin.evaluations.details_evaluation'
  div class: 'col col-6 mx-auto' do
    h1 nom_pour_ressource(resource)
    h3 t('.titre'), class: 'titre'
    div class: 'card' do
      div class: 'row m-0' do
        div class: 'col col-6 card-informations' do
          if can?(:manage, Beneficiaire)
            div class: 'row' do
              div class: 'col-1' do
                span 'Bénéficiaire'
              end
              div class: 'col col-2' do
                auto_link resource.beneficiaire
              end
            end
          end
          div class: 'row' do
            div class: 'col-1' do
              span 'Campagne'
            end
            div class: 'col col-2' do
              auto_link resource.campagne
            end
          end
          div class: 'row' do
            div class: 'col col-1' do
              span Evaluation.human_attribute_name('debutee_le')
            end
            div class: 'col col-2' do
              span l(resource.debutee_le, format: :humain)
            end
          end
          if can?(:manage, Compte)
            if statistiques.temps_total
              div class: 'row' do
                div class: 'col col-1' do
                  span Evaluation.human_attribute_name('temps_total')
                end
                div class: 'col col-2' do
                  span { formate_duree statistiques.temps_total }
                end
              end
            end
            if resource.terminee_le
              div class: 'row' do
                div class: 'col col-1' do
                  span Evaluation.human_attribute_name('terminee_le')
                end
                div class: 'col col-2' do
                  span l(resource.terminee_le, format: :humain)
                end
              end
            end
            if resource.condition_passation
              condition_passation = resource.condition_passation
              div class: 'row' do
                div class: 'col-1' do
                  span 'Materiel Utilisé'
                end
                div class: 'col col-2' do
                  span condition_passation.materiel_utilise
                  span ' | '
                  span condition_passation.nom_navigateur
                  div condition_passation.resolution_ecran
                end
              end
            end
          end
          if can?(:manage, Compte) && resource.anonyme?
            div class: 'row' do
              div class: 'col col-1' do
                span Evaluation.human_attribute_name('anonymisee_le')
              end
              div class: 'col col-2' do
                span l(resource.anonymise_le, format: :humain)
              end
            end
          end
        end
        div class: 'col-2 card-pdf' do
          div class: 'pdf-image' do
            inline_svg_tag('source-aide-pdf.svg')
          end
          div class: 'pdf-bouton' do
            link_to('Exporter', {
                      parties_selectionnees: params[:parties_selectionnees],
                      format: :pdf
                    },
                    class: 'bouton bouton-arrondi', target: '_blank', rel: 'noopener')
          end
        end
      end
      unless resource.complete?
        div class: 'row m-0' do
          div class: 'container card__banner card__banner--alert d-flex' do
            div(class: 'col-2 d-flex align-items-center justify-content-center') do
              svg_tag_base64 'attention_icone.svg', class: 'banner__icone'
            end
            div class: 'col-6 supprime-espace-derniere-balise' do
              if resource.competences_de_base_incompletes?
                md t('evaluation_competences_de_base_incomplete', scope: scope)
              elsif resource.competences_transversales_incompletes?
                md t('evaluation_competences_transversales_incomplete', scope: scope)
              else
                md t('evaluation_incomplete', scope: scope)
              end
            end
          end
        end
      end
      if resource.illettrisme_potentiel?
        div class: 'row m-0' do
          div class: 'container card__banner card__banner--illettrisme d-flex' do
            div(class: 'col-2 d-flex align-items-center justify-content-center') do
              svg_tag_base64 'formation_icone.svg', class: 'banner__icone'
            end
            div class: 'col-6' do
              div md t('illetrisme_potentiel.message', scope: scope)
              div class: 'd-flex justify-content-end' do
                link_to t('illetrisme_potentiel.action', scope: scope),
                        Eva::LIEN_DEMANDE_ACCOMPAGNEMENT_ILLETTRISME,
                        target: '_blank',
                        class: 'bouton bouton-principal',
                        rel: 'noopener'
              end
            end
          end
        end
      end
    end
  end
end
