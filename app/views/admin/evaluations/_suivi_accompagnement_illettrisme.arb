# frozen_string_literal: true

div class: 'row m-0' do
  div class: 'container card__banner card__banner--illettrisme d-flex' do
    div(class: 'col-2 d-flex align-items-center justify-content-center') do
      svg_tag_base64 'formation_icone.svg', class: 'banner__icone'
    end
    div class: 'col-6' do
      div md t('illettrisme_potentiel.message', scope: scope)
      div class: 'd-flex justify-content-center text-primary', 'data-reponse': nil do
        class_cache = resource.mise_en_action_effectuee == true ? '' : 'hidden'
        div 'data-reponse': 'true', class: "mise-en-action #{class_cache}" do
          text_node '<strong>Oui</strong>, vous avez trouvé une solution'.html_safe
        end
        class_cache = resource.mise_en_action_effectuee == false ? '' : 'hidden'
        div 'data-reponse': 'false', class: "mise-en-action #{class_cache}" do
          text_node "<strong>Non</strong>, vous n'avez pas trouvé de solution".html_safe
        end
        class_cache = resource.mise_en_action_effectuee.nil? ? '' : 'hidden'
        div 'data-reponse': 'vide', class: "d-flex actions mise-en-action #{class_cache}" do
          text_node link_to 'Oui',
                            '#',
                            class: 'bouton bouton-principal reponse-mise-en-action',
                            data: {
                              'evaluation-id': resource.id,
                              reponse: true
                            }
          text_node link_to 'Non',
                            '#',
                            class: 'bouton bouton-principal reponse-mise-en-action',
                            data: {
                              'evaluation-id': resource.id,
                              reponse: false
                            }
        end
      end
    end
  end
end
