<div class="evaluation-sidebar__container">
  <% if opco.present? && opco.financeur? %>
    <div class="evaluation-sidebar__bloc evaluation-sidebar__bloc-opco-background">
      <h3 class="evaluation-sidebar__bloc-opco-partenaire__titre"><%= t("admin.evaluations.sidebar.opco_partenaire.titre") %></h3>
      <% if opco.logo.attached? %>
        <%= image_tag cdn_for(opco.logo.variant(:defaut)),
                      alt: opco.nom,
                      class: "bloc-opco-partenaire__logo" %>
      <% end %>
    </div>
  <% end %>
  <div class="evaluation-sidebar__bloc">
    <div class="evaluation-sidebar__bloc-evaluation__details">
      <h3><%= t("admin.dashboard.sidebar.opco_entreprise.titre") %></h3>
      <p><%= structure.nom %></p>
    </div>
    <% if structure.is_a?(StructureLocale) %>
      <%= render BoutonDsfrComponent.new(admin_structure_locale_path(structure, anchor: "bloc-membres"), type: :tertiary, size: :sm) do %>
        <%= t("admin.dashboard.sidebar.opco_entreprise.inviter") %>
      <% end %>
    <% end %>
  </div>
</div>