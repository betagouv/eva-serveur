<div class='bloc-questionnaires-entreprise bloc-apercu'>
  <div class='bloc-apercu-wrapper'>
    <div class="titre-panel-avec-bouton fr-mb-3v">
      <h3><%= t(".titre") %></h3>
    </div>
  </div>

  <div class="fr-grid-row fr-grid-row--gutters">
    <% campagnes.each do |campagne| %>
      <div class="fr-col fr-col-md-12">
        <% url = LanceurCampagne.url(campagne, current_compte) %>
        <%= render CardDiagnostiqueComponent.new(
          titre: campagne.parcours_type.libelle,
          description: campagne.parcours_type.description,
          precision_detail: "Recommandé car votre entreprise dépend de l’opérateur de compétences #{opco.nom}.",
          bouton_label: "Lancer le diagnostic ->",
          bouton_url: url,
          opco: opco,
          bouton_attributes: { target: "_blank", rel: "noopener" }
        ) %>
      </div>
    <% end %>
  </div>
</div>

