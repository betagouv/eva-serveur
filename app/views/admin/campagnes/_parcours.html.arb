# frozen_string_literal: true

h2 t('.titre_panel_parcours'), class: 'sous-titre'
div class: 'campagne-parcours' do
  div class: 'campagne-parcours-intro' do
    md t('.demande_aide_pour_configuration_campagne', email_contact: Eva::EMAIL_CONTACT)
  end
  div class: 'campagne-parcours-info' do
    if campagne.parcours_type.present?
      h4 campagne.parcours_type.libelle
      div class: 'campagne-parcours-info-description' do
        md campagne.parcours_type.description
      end
      para class: 'campagne-parcours-info-duree-moyenne' do
        "Dur√©e moyenne : #{campagne.parcours_type.duree_moyenne}"
      end
    else
      h4 t('.parcours_personnalise.titre')
      div class: 'campagne-parcours-info-description' do
        md t('.parcours_personnalise.description')
      end
    end
  end
end

div class: 'panel campagne-auto_positionnement' do
  if campagne.auto_positionnement_inclus?
    div class: 'row inclus' do
      div class: 'col title' do
        t('.auto_positionnement')
      end
      div class: 'col text-right commentaire' do
        t(".#{campagne.auto_positionnement_inclus?}")
      end
    end
  else
    div class: 'row non_inclus' do
      div class: 'col title' do
        t('.auto_positionnement')
      end
      div class: 'col text-right commentaire' do
        t(".#{campagne.auto_positionnement_inclus?}")
      end
    end
  end
end

div class: 'panel campagne-expression_ecrite' do
  if campagne.expression_ecrite_incluse?
    div class: 'row inclus' do
      div class: 'col title' do
        t('.expression_ecrite')
      end
      div class: 'col text-right commentaire' do
        t(".#{campagne.expression_ecrite_incluse?}")
      end
    end
  else
    div class: 'row non_inclus' do
      div class: 'col title' do
        t('.expression_ecrite')
      end
      div class: 'col text-right commentaire' do
        t(".#{campagne.expression_ecrite_incluse?}")
      end
    end
  end
end
