<div class="tableau-bord-sidebar-container">
  <% if opco.present? && opco.financeur? %>
    <div class="bloc-opco-partenaire">
      <h3 class="bloc-opco-partenaire__titre"><%= t("admin.dashboard.sidebar.opco_partenaire.titre") %></h3>
      <% if opco.logo.attached? %>
        <%= image_tag cdn_for(opco.logo.variant(:defaut)),
                      alt: opco.nom,
                      class: "bloc-opco-partenaire__logo" %>
      <% end %>
    </div>
  <% end %>
  <div class="bloc-opco-entreprise">
    <div class="bloc-opco-entreprise__details">
      <h3 class="bloc-opco-entreprise__titre"><%= t("admin.dashboard.sidebar.opco_entreprise.titre") %></h3>
      <p class="bloc-opco-entreprise__nom"><%= structure.nom %></p>
    </div>
    <% if structure.is_a?(StructureLocale) %>
      <%= render BoutonDsfrComponent.new(admin_structure_locale_path(structure, anchor: "bloc-membres"), type: :tertiary, size: :sm) do %>
        <%= t("admin.dashboard.sidebar.opco_entreprise.inviter") %>
      <% end %>
    <% end %>
  </div>
</div>
