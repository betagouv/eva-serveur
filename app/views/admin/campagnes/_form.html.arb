# frozen_string_literal: true

div class: 'nouvelle-campagne' do
  div class: 'row' do
    div class: 'offset-1 col-4' do
      h1 t('.titre'), class: 'titre'

      div class: 'panel description' do
        para { t('.explication_campagne') }
        para { t('.explication_code') }
      end

      active_admin_form_for [:admin, resource] do |f|
        f.semantic_errors
        div class: 'panel' do
          h2 t('.titre_informations'), class: 'titre titre--medium'
          f.inputs do
            f.input :libelle
            f.input :code
          end
        end

        if resource.new_record?
          div class: 'panel' do
            h2 t('.choix_parcours'), class: 'titre titre--medium'
            f.inputs class: 'input-choix-parcours' do
              f.input :modele_parcours, as: :radio,
                                        collection: collection_modeles_parcours(situations),
                                        required: true,
                                        label: false
            end
          end
        end

        if current_compte.administrateur?
          div class: 'panel' do
            h2 t('.configuration_avancee'), class: 'titre titre--medium'
            f.inputs do
              f.input :compte
              f.input :affiche_competences_fortes
              f.input :questionnaire
              if resource.persisted?
                f.has_many :situations_configurations, allow_destroy: true do |c|
                  c.input :id, as: :hidden
                  c.input :situation
                  c.input :questionnaire
                end
              end
            end
          end
        end

        f.actions
      end
    end
  end
end
