
<div id="active_admin_content">
  <% content_for :titre do %>
    <%= t('.titre') -%>
  <% end %>

  <div class="recherche-structure">
    <%= link_to t('.bouton_retour'), new_compte_session_path, class: 'bouton bouton-retour' %>
    <%= md t('.description')%>
    <div class='label-champ-recherche'><%= t('.label_champ_recherche')%></div>
    <%= form_with method: :get do |f| %>
      <%= f.search_field :code_postal, placeholder: t('.place_holder_recherche'), value: params[:code_postal], class: 'champ-recherche' %>
      <%= f.submit 'chercher', id: 'bouton-chercher',
        disabled: !params[:code_postal] || params[:code_postal].length == 0 %>
    <% end %>

    <% if params[:code_postal] %>
      <%= render(partial: 'structure', collection: @structures) ||
        content_tag(:p, t('.aucun_resultat'), class: 'aucun-resultat') %>

      <div class="actions">
      <%= link_to t('.structure_non_referencee'), nouvelle_structure_path, class: 'creer-structure' %>
      </div>
    <% end %>

  </div>
</div>
