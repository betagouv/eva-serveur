<% scope = 'components.carte_avec_menu_deroulant' %>
<div id='<%= @ressource.id %>' class="carte__conteneur position-relative">
  <div class="card carte-liste d-flex align-items-center <%= @menu_affiche ? 'carte--deroulante' : '' %>">
    <div class="row w-100 no-gutters d-flex justify-content-between align-items-center">
      <%= content %>
    </div>
  </div>
  <div class="card carte__menu-deroulant position-absolute w-100 <%= @menu_affiche ? '' : 'hidden' %>" style="z-index: <%= @priorite %>;">
    <p><%= @question %></p>
    <form class="mt-3">
      <ul style="list-style-type: none" class="m-0 p-0">
        <% @reponses.each_value do |option| %>
          <li>
            <label>
              <input type="radio" name="dispositif_de_remediation" value="<%= option %>" class="hidden" autocomplete="off">
              <%= render(Tag.new(t("activerecord.attributes.mise_en_action.dispositifs_de_remediation.#{option}"))) %>
            </label>
          </li>
        <% end %>
        <li class="d-flex justify-content-end">
          <button type="button" class="bouton bouton-outline--grey ferme-dispositif-remediation">
            <%= t('.action_fermer') %>
          </button>
          <button type="button" class="bouton valide-dispositif-remediation mr-0 bouton--desactive">
            <%= t('.action_valider') %>
          </button>
        </li>
      </ul>
    </form>
  </div>
</div>
