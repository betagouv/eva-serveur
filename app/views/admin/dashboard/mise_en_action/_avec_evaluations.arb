# frozen_string_literal: true

div class: 'contenu-avec-evaluations' do
  div class: 'bloc-apercu-header bg-orange p-4 mb-0' do
    h3 t('.titre')
    text_node link_to t('.action', nombre_evaluations: evaluations.count),
                      admin_evaluations_path(q: { mise_en_action_effectuee_null: true },
                                             scope: :illettrisme_potentiel)
  end
  div class: 'px-3' do
    div class: 'd-flex align-items-center question' do
      text_node image_tag 'point_interrogation.svg', class: 'mr-3'
      div t('.question'),
          class: 'fw-semi-bold'
    end
    render 'liste_evaluations', evaluations: evaluations.limit(6),
                                partial_evaluation: 'evaluation_sans_mise_en_action'
    render 'components/asterisque_solutions_illettrisme'
  end
end
