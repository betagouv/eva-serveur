<%# frozen_string_literal: true %>
<div class="container">
  <div class="fr-mb-3w">
    <%= link_to "← Retour à l'index des composants", "/admin/ui_kit", class: "fr-link" %>
  </div>

  <h1>Démo TagComponent</h1>

  <h2>Tag simple</h2>
  <%= render Tag.new("Important") %>

  <h2>Tag avec classes personnalisées</h2>
  <%= render Tag.new("gris", classes: "grey") %>
  <%= render Tag.new("rouge", classes: "red") %>
  <%= render Tag.new("vert", classes: "green") %>
  <%= render Tag.new("bleu", classes: "bleu") %>

  <h2>Tag supprimable (la couleur de la croix nécessite d'utiliser le bleu)</h2>
  <%= render Tag.new("À supprimer", classes: "bleu", supprimable: true, url: "javascript:alert('vous avez cliqué le lien supprimer');") %>

  <h2>Différents types de tags</h2>
  <div class="fr-mb-2w">
    <%= render Tag.new("Assistance", classes: "tag-categorie assistance") %>
  </div>
  <div class="fr-mb-2w">
    <%= render Tag.new("Blog", classes: "tag-categorie blog") %>
  </div>
  <div class="fr-mb-2w">
    <%= render Tag.new("Evolution", classes: "tag-categorie evolution") %>
  </div>
</div>
