diag_risques_entreprise = restitution_globale.diag_risques_entreprise
pourcentage_risque = nil
evaluation_impact_general = nil

div class: "evaluation-evapro" do
  div class: "page page__evapro adaptation-pdf" do
    if pdf
      render(Pdf::HeaderEvaproComponent.new(date: evaluation.debutee_le,
beneficiaire: evaluation.beneficiaire.nom))
    end
    div class: "page__contenu" do
      div class: "evaluation-evapro__titre-container" do
        h1 titre_evaluation_evapro(evaluation), class: "evaluation-evapro__titre"
        if !pdf
          url = admin_evaluation_path(evaluation, format: :pdf)
          render(BoutonComponent.new(url, type: :primary, size: :xs).with_content("Exporter"))
        end
      end

      if diag_risques_entreprise
        pourcentage_risque = diag_risques_entreprise.partie.synthese["pourcentage_risque"]
        if pourcentage_risque
          render(
            partial: "mesure_des_risques",
            locals: { pourcentage_risque: pourcentage_risque, pdf: pdf }
          )
        end
      end

      if pourcentage_risque
        evaluation_impact_general = restitution_globale.evaluation_impact_general
        complet = evaluation_impact_general.present?
        render(
          partial: "mesure_des_impacts",
          locals: {
            evaluation_impact_general: evaluation_impact_general,
            pdf: pdf,
            complet: complet
          }
        )

        if complet
          render(
            partial: "impact_couts",
            locals: {
              synthese: evaluation_impact_general.synthese,
              pdf: pdf,
              complet: complet
            }
          )
        end
      end
    end
  end

  if diag_risques_entreprise && evaluation_impact_general.present?
    div class: "page page__evapro adaptation-pdf" do
      if pdf
        render(Pdf::HeaderEvaproComponent.new(date: evaluation.debutee_le,
beneficiaire: evaluation.beneficiaire.nom))
      end
      div class: "page__contenu" do
        render(
          partial: "bilan_evapro",
          locals: {
            diag_risques_entreprise: diag_risques_entreprise,
            opco: restitution_globale.evaluation.opco_financeur,
            pdf: pdf
          }
        )

        render(
          partial: "aller_plus_loin",
        )
      end
    end
  end
end
