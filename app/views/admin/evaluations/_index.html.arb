if current_compte.utilisateur_entreprise?
  render partial: "admin/evaluations/index_evapro/tableau", locals: { context: context }
else
  context.instance_eval do
    column :beneficiaire do |evaluation|
      render partial: "beneficiaire", locals: { evaluation: evaluation }
    end

    column :campagne do |evaluation|
      campagne = evaluation.campagne
      div class: "cellule" do
        div link_to(campagne.display_name, admin_campagne_path(campagne),
                    class: "evaluation__campagne"),
            class: "d-flex align-items-center"
        parcours_type = campagne.parcours_type
        if parcours_type.present? && !current_compte.administratif?
          div parcours_type.display_name, class: "evaluation__campagne-sous-titre"
        end
        if current_compte.anlci? || current_compte.administratif?
          div evaluation.campagne.structure.display_name, class: "evaluation__campagne-sous-titre"
        end
      end
    end
    column :created_at do |evaluation|
      render partial: "actions_et_date_creation", locals: { evaluation: evaluation }
    end
  end
end
