<%= render PanelComponent.new(titre: t(".titre-evaluation-diagnostic"), classes: "panel--beneficiaire") do %>
  <%= render TableauComponent.new(collection: beneficiaire.evaluations_diagnostic) do |tableau| %>
    <% tableau.colonne(titre: t(".created_at")) do |evaluation|%>
      <% evaluation.created_at.strftime("%d/%m/%Y") %>
    <%end %>
    <% tableau.colonne(titre: Evaluation.human_attribute_name("campagne")) do |evaluation|%>
      <% evaluation.campagne.display_name %>
    <%end %>
    <% tableau.colonne(td_class: "col-actions tableau-boutons-action") do |evaluation| %>
        <%= render MenuActionsComponent.new(evaluation,
          { label: t("admin.evaluations.index.voir"), type: :read, url: :admin_evaluation_path },
          { label: t("admin.evaluations.index.modifier"), type: :edit, url: :edit_admin_evaluation_path },
          { label: t("admin.evaluations.index.supprimer"), type: :destroy, url: :admin_evaluation_path, method: :delete, data: { confirm: t("admin.evaluations.index.confirmation_suppression") } }
        ) %>
    <% end %>
  <% end %>
<% end %>
