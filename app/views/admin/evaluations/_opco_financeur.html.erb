<div class="evaluation-sidebar__container">
	<% if opco.present? && opco.financeur? %>
		<div class="evaluation-sidebar__bloc evaluation-sidebar__bloc-opco-background">
			<h3 class="evaluation-sidebar__bloc-opco-partenaire__titre"><%= t("admin.dashboard.sidebar.opco_partenaire.titre") %></h3>
			<% if opco.logo.attached? %>
				<%= image_tag cdn_for(opco.logo.variant(:defaut)),
                      alt: opco.nom,
                      class: "bloc-opco-partenaire__logo" %>
			<% end %>
		</div>
	<% end %>

	<div class="evaluation-sidebar__bloc">
		<div class="evaluation-sidebar__bloc-evaluation__details">
			<h3 class="evaluation-sidebar__bloc-evaluation__titre">Par</h3>
			<p class="evaluation-sidebar__bloc-evaluation__nom"><%= evaluation.beneficiaire.nom %></p>
		</div>
		<div class="evaluation-sidebar__bloc-evaluation__details">
			<h3 class="evaluation-sidebar__bloc-evaluation__titre">Date</h3>
			<p class="evaluation-sidebar__bloc-evaluation__nom"><%= I18n.l(evaluation.debutee_le, format: :avec_heure_mois_complet) %></p>
		</div>
		<div class="evaluation-sidebar__bloc-evaluation__details">
			<h3 class="evaluation-sidebar__bloc-evaluation__titre">Questionnaire</h3>
			<p class="evaluation-sidebar__bloc-evaluation__nom"><%= evaluation.campagne.libelle %></p>
		</div>
	</div>
</div>

